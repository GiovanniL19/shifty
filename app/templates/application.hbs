{{#if isOffline}}
  <div class="message_alert">
    You are offline
  </div>
{{/if}}

{{#if message}}
  <div class="message_alert">
    {{message}}
  </div>
{{/if}}

{{#if isLoginPage}}
  {{outlet}}
{{else}}
  {{partial "navigation"}}
  {{liquid-outlet class="liquid-container"}}
{{/if}}

{{#if loading}}
  <div class="loading">
    {{#if isOffline}}
    <span class="spinner">{{fa-icon 'chain-broken'}}</span>
    {{else}}
      <span class="spinner">{{fa-icon 'circle-o-notch' spin=true}}</span>
    {{/if}}
  </div>
{{/if}}
  