<div class="login_back">
  <div class="login_form col-sm-12 animated bounce">
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 text-center">
      <div class="logo animated bounce">
          Shifty<br>
          <small>The smart shift rota</small>
      </div>
  
      <div class="input-group">
        {{input type="text" class="form-control" placeholder="Username" value=identification}}
        {{input type="password" class="form-control" placeholder="Password" value=password insert-newline='authenticate'}}
        <button class="btn btn-primary" {{action 'authenticate'}}>Login</button>
      </div>
    <br>
    <span class="developer_logo">
      {{fa-icon "code" rotate=315}}
    </span>
    </div>
  </div>
</div>