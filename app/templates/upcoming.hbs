<div class="upComing">
  {{#if application.cardView}}
    {{#if model}}
      <p class="text-center"><h5>Shifts coming up...</h5></p>
    {{/if}}
    <div class="cards">
      {{#each model as |shift|}}
        <div class="card animated fadeIn" id="{{shift.id}}">
          <div class="remove col-xs-1" {{action 'removeShift' shift}}>
            {{fa-icon "times"}}
          </div>
          <div class="title col-xs-5">
            <strong>{{shift.dateFormatted}}</strong><br>
            <strong>{{shift.reference}}</strong>
          </div>

          {{#if shift.day}}
            <span class="dayNight col-xs-2 text-center"><span class="circle" style="background:#2196F3;">{{fa-icon 'sun-o'}}</span></span>
          {{else}}
            <span class="dayNight col-xs-2 text-center"><span class="circle" style="background:#1A237E;">{{fa-icon 'moon-o'}}</span></span>
          {{/if}}

          <div class="date col-xs-3 text-right">
             {{#if shift.upcoming}}<small class="upcoming">COMING UP</small>{{/if}}
             <br>
             <p>
              Start {{shift.startTime}}
              End {{shift.endTime}}
            </p>
          </div>
        </div>
      {{else}}
        <div class="text-center nothing">
          <h1>{{fa-icon "calendar-times-o"}}</h1>
          <h6>You have no future shifts</h6>
        </div>
      {{/each}}
    </div>
  
  {{else}}
    {{partial "filter"}}
    {{partial "calendar-view"}}
    <p class="text-center">The blue squares represent your shifts</p>
  {{/if}}
</div>